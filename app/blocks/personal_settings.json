{
	"type": "modal",
	"submit": {
		"type": "plain_text",
		"text": "OK",
		"emoji": true
	},
	"close": {
		"type": "plain_text",
		"text": "戻る",
		"emoji": true
	},
	"title": {
		"type": "plain_text",
		"text": "出退勤Botの個人設定",
		"emoji": true
	},
	"blocks": [
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": ":warning: *勤怠専用チャンネル or 勤怠スレッドのどちらかは必須です*"
			}
		},
		{
			"type": "divider"
		},
		{
			"type": "input",
			"element": {
				"type": "multi_conversations_select",
				"placeholder": {
					"type": "plain_text",
					"text": "チャンネルを選択",
					"emoji": true
				},
				"filter": {
					"include": [
						"public",
						"private"
					],
					"exclude_bot_users": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "勤怠専用チャンネル（複数選択可）",
				"emoji": true
			}
		},
		{
			"type": "context",
			"elements": [
				{
					"type": "image",
					"image_url": "https://api.slack.com/img/blocks/bkb_template_images/placeholder.png",
					"alt_text": "placeholder"
				}
			]
		},
		{
			"type": "divider"
		},
		{
			"type": "input",
			"element": {
				"type": "conversations_select",
				"placeholder": {
					"type": "plain_text",
					"text": "チャンネルを選択",
					"emoji": true
				},
				"filter": {
					"include": [
						"public",
						"private"
					],
					"exclude_bot_users": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "勤怠スレッドがあるチャンネルを選択（複数選択不可）",
				"emoji": true
			}
		},
		{
			"type": "input",
			"element": {
				"type": "plain_text_input",
				"placeholder": {
					"type": "plain_text",
					"text": "例: 本日の勤怠連絡はこちらのスレッドにお願いします！",
					"emoji": true
				}
			},
			"label": {
				"type": "plain_text",
				"text": "スレッドの最初のメッセージを入力（前方一致）",
				"emoji": true
			}
		},
		{
			"type": "input",
			"element": {
				"type": "checkboxes",
				"options": [
					{
						"text": {
							"type": "mrkdwn",
							"text": "出勤時にプロフィールの出社ステータス変更をする :office::house:"
						},
						"value": "value-0"
					}
				]
			},
			"label": {
				"type": "plain_text",
				"text": "その他",
				"emoji": true
			}
		}
	]
}